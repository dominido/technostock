<?xml version="1.0" ?>
<config>
    <sections>
        <attribute_filter_section module="brander_product_filter" translate="label">
            <label>Product Filter by Attribute</label>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>brander</tab>
            <groups>
                <settings_group translate="label">
                    <label>Product Filter Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <use_attribute_filter translate="label">
                            <label>Enable Product Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </use_attribute_filter>
                        <filter_attribute>
                        	<label>Attribute to filter by</label>
                        	<frontend_type>select</frontend_type>
                        	<source_model>brander_product_filter/attributes</source_model>
                        	<sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </filter_attribute>
                    </fields>
                </settings_group>
            </groups>
        </attribute_filter_section>
    </sections>
</config>