<?xml version="1.0"?>
<config>
    <sections>
        <catalog>
            <groups>
                <seo>
                    <fields>
                        <product_view_meta_title_suffix>
                            <label>Custom Product View Meta Title</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[ put "{product_name}" for insert product name in text]]></comment>
                        </product_view_meta_title_suffix>
                        <product_view_meta_keywords_suffix>
                            <label>Custom Product View Meta Keywords</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[ put "{product_name}" for insert product name in text]]></comment>
                        </product_view_meta_keywords_suffix>
                        <product_view_meta_descriptions_suffix>
                            <label>Custom Product View Meta Description</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[ put "{product_name}" for insert product name in text]]></comment>
                        </product_view_meta_descriptions_suffix>
                        <stores_noindex>
                            <label>Stores No Index (Follow)</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>brander_seo/system_config_source_stores</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </stores_noindex>
                    </fields>
                </seo>
            </groups>
        </catalog>
    </sections>
</config>