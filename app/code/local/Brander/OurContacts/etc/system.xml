<config>
    <sections>
        <customercallbacks translate="label" module="brander_ourcontacts">
            <class>separator-top</class>
            <label>Our Contacts and CallBack</label>
            <tab>brander</tab>
            <frontend_type>text</frontend_type>
            <sort_order>32</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label comment" module="brander_ourcontacts">
                    <label>Setup Blocks Positions</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <header_position translate="label comment" module="brander_ourcontacts">
                            <label>Header CallBack and Contacts positions</label>
                            <comment>set block position in header, where to show callback and phones list</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>brander_ourcontacts/config_source_blockpositions</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </header_position>
                    </fields>
                </settings>
            </groups>
        </customercallbacks>
    </sections>
</config>
