<?xml version="1.0"?>
<config>
    <modules>
        <Brander_Opcheckout>
            <version>0.1.2</version>
        </Brander_Opcheckout>
    </modules>
    <frontend>
        <routers>
            <opcheckout>
                <use>standard</use>
                <args>
                    <module>Brander_Opcheckout</module>
                    <frontName>opcheckout</frontName>
                </args>
            </opcheckout>
        </routers>
        <layout>
            <updates>
                <opcheckout>
                    <file>brander_opcheckout.xml</file>
                </opcheckout>
            </updates>
        </layout>
        <events>
            <checkout_type_onepage_save_order>
                <observers>
                    <opcheckout_save_order_comment>
                        <type>helper</type>
                        <class>Brander_Opcheckout_Helper_Data</class>
                        <method>setOrderCommentCompatible</method>
                    </opcheckout_save_order_comment>
                </observers>
            </checkout_type_onepage_save_order>
        </events>
        <translate>
            <modules>
                <Brander_Opcheckout>
                    <files>
                        <default>Brander_Opcheckout.csv</default>
                    </files>
                </Brander_Opcheckout>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <opcheckout>
                            <title>Opcheckout Module</title>
                            <sort_order>10</sort_order>
                        </opcheckout>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <opcheckout>
                                            <title>OPCheckout</title>
                                        </opcheckout>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <Brander_Opcheckout>
                    <files>
                        <default>Brander_Opcheckout.csv</default>
                    </files>
                </Brander_Opcheckout>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <blocks>
            <brander_opcheckout>
                <class>Brander_Opcheckout_Block</class>
            </brander_opcheckout>
            <adminhtml>
                <rewrite>
                    <sales_order_view_items>Brander_Opcheckout_Block_Adminhtml_Sales_Order_View_Opcheckoutcomment</sales_order_view_items>
                </rewrite>
            </adminhtml>
            <sales>
                 <rewrite>
                    <order_view>Brander_Opcheckout_Block_Sales_Order_View</order_view>
                 </rewrite>
            </sales>
            <checkout>
                <rewrite>
                    <onepage_success>Brander_Opcheckout_Block_Onepage_Success</onepage_success>
                </rewrite>
            </checkout>
        </blocks>
        <models>
            <brander_opcheckout>
                <class>Brander_Opcheckout_Model</class>
            </brander_opcheckout>
            <paypal>
                <rewrite>
                    <api_nvp>Brander_Opcheckout_Model_Paypal_Api_Nvp</api_nvp>
                </rewrite>
            </paypal>
        </models>
        <helpers>
            <brander_opcheckout>
                <class>Brander_Opcheckout_Helper</class>
            </brander_opcheckout>
        </helpers>
        <resources>
            <brander_opcheckout_setup>
                <setup>
                    <module>Brander_Opcheckout</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brander_opcheckout_setup>
            <brander_opcheckout_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brander_opcheckout_write>
            <brander_opcheckout_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brander_opcheckout_read>
        </resources>
    </global>
    <default>
        <opcheckout>
            <general>
                <enabled>0</enabled>
            </general>
            <order>
                <opcheckout_title>Welcome to OPcheckout</opcheckout_title>
                <opcheckout_desc>Complete your order in a single step by entering your details below.</opcheckout_desc>
                <opcheckout_show_billing_same_as_shipping>0</opcheckout_show_billing_same_as_shipping>
                <opcheckout_show_countries>0</opcheckout_show_countries>
                <opcheckout_default_country>UA</opcheckout_default_country>
                <opcheckout_show_states>0</opcheckout_show_states>
                <opcheckout_default_state>--- ---</opcheckout_default_state>
                <opcheckout_newsletter_subscribe>0</opcheckout_newsletter_subscribe>
                <newsletter_checked_bydefault>0</newsletter_checked_bydefault>
                <opcheckout_order_comment>0</opcheckout_order_comment>
                <opcheckout_order_comment_length>150</opcheckout_order_comment_length>
            </order>
            <billing_fields_setting>
                <telephone>1</telephone>
            </billing_fields_setting>
            <shipping_fields_setting>
                <telephone>1</telephone>
            </shipping_fields_setting>
        </opcheckout>
    </default>
</config>