<config>
    <sections>
        <wishlist>
            <groups>
                <general>
                    <fields>
                        <allow_comments translate="label" module="cms">
                            <label>Allow comments to wish item</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_comments>
                    </fields>
                </general>
            </groups>
        </wishlist>
        <customer>
            <groups>
                <telephone_settings translate="label">
                    <label>Telephone Settings</label>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_phone_mask translate="label comment">
                            <label>Enable Telephone field "mask"</label>
                            <comment>helps customer enter valid telephone number by input "mask"</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_phone_mask>
                        <phone_mask translate="label comment">
                            <label>Set default phone "mask"</label>
                            <comment>for example +380 dd ddd-dd-dd, customer can set his telephone number as +380 97 777-77-77</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </phone_mask>
                    </fields>
                </telephone_settings>
            </groups>
        </customer>
    </sections>
</config>
